{
    "extends": "idiomatic",
    "env": {
        "browser": true,
        "es6": true,
        "jasmine": true,
        "jquery": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "space-in-parens": [
            "error",
            "always",
            {
                "exceptions": ["{}"]
            }
        ],
        "one-var": [
            "error",
            "never"
        ],
        "func-names": [
            "error",
            "never"
        ],
        "no-undef": [
            "error"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}